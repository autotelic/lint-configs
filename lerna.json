{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "0.4.0",
  "scope": [
    "@autotelic/*"
  ],
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "ignoreChanges": [
    "packages/*/{*.md,/**/*.md}"
  ],
  "hoist": [
    "eslint",
    "lerna"
  ]
}
